<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/element_border"
    android:backgroundTint="@color/theme_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="294dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/habit_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Habit Title"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/selected_dates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Selected Dates"
                android:textColor="@color/text_primary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reason_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="User's Reason"
                android:textColor="@color/text_primary"/>
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/drag_handle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:background="@color/theme_bg"
        app:tint="@color/text_primary"
        android:padding="4dp"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/ic_baseline_drag_handler" />

</LinearLayout>