<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/habit_list_border"
    android:backgroundTint="@color/theme_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/habit_title"
                android:layout_width="match_parent"
                android:textSize="22dp"
                android:textColor="@color/text_primary"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Habit Title" />


            <TextView
                android:id="@+id/selected_dates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="2dp"
                android:layout_weight="1"
                android:textSize="10dp"
                android:textColor="@color/text_primary"
                android:text="Selected Dates" />

        </LinearLayout>

            <TextView
                android:id="@+id/reason_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="User's Reason"
                android:textColor="@color/text_primary"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        app:tint="@color/text_primary"
        android:padding="4dp"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/ic_baseline_drag_handler" />

</LinearLayout>

