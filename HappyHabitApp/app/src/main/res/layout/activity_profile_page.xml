<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfilePageActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_page_back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/theme_primary"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/ic_backbutton"
            app:tint="@color/theme_secondary" />

        <TextView
            android:id="@+id/profile_page_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Username"
            android:background="@color/theme_primary"
            android:textColor="@color/theme_secondary"
            android:gravity="center|right"
            android:textSize="18sp"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/profile_page_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"
            android:background="@color/theme_primary"
            android:src="@drawable/default_profile_pic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/userSince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/theme_primary"
            android:textSize="22sp"
            android:text="User Since:"
            android:gravity="right"/>

        <TextView
            android:id="@+id/profile_page_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/theme_primary"
            android:textSize="22sp"
            android:paddingLeft="5dp"
            android:text="MM/DD/YYYY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:id="@+id/follower_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/theme_primary"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/follower_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/theme_secondary"
                android:text="5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/theme_secondary"
                android:text="Followers"
                android:paddingBottom="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/following_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/theme_primary"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/following_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/theme_secondary"
                android:text="3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/theme_secondary"
                android:text="Following"
                android:paddingBottom="3dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Follow Requests:"
        android:textSize="22sp"
        android:padding="8dp"
        android:textColor="@color/theme_primary"/>

    <ListView
        android:id="@+id/follow_req_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>