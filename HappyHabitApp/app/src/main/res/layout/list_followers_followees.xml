<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewUsersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/follow_list_back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/theme_primary"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/ic_backbutton"
            app:tint="@color/theme_secondary" />

        <TextView
            android:id="@+id/follow_list_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Username"
            android:background="@color/theme_primary"
            android:textColor="@color/theme_secondary"
            android:gravity="center|right"
            android:textSize="18sp"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/follow_list_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"
            android:background="@color/theme_primary"
            android:src="@drawable/default_profile_pic" />
    </LinearLayout>

    <TextView
        android:id="@+id/following_or_followee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Followers/Followees"
        android:textSize="32sp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:textColor="@color/theme_primary"/>

    <ListView
        android:id="@+id/user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />


</LinearLayout>
