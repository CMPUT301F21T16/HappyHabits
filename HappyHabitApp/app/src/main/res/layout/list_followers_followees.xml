<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/follow_list_back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/theme_primary"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/ic_backbutton"
            app:tint="@color/theme_secondary" />

        <TextView
            android:id="@+id/follow_list_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Username"
            android:background="@color/theme_primary"
            android:textColor="@color/theme_secondary"
            android:gravity="center|right"
            android:textSize="18sp"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/follow_list_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"
            android:background="@color/theme_primary"
            android:src="@drawable/default_profile_pic" />
    </LinearLayout>

    <TextView
        android:id="@+id/following_or_followee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Followers/Followees"
        android:textSize="32sp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:textColor="@color/theme_primary"/>

    <LinearLayout
        android:id="@+id/send_req_bar"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundColor="@color/theme_secondary"
        android:background="@drawable/element_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/theme_primary"
            android:layout_weight="3"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:gravity="center"
            android:textColor="@color/theme_secondary"
            android:textSize="16sp"
            android:text="Send Follow Request" />

        <EditText
            android:id="@+id/req_to_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:inputType="textPersonName"
            android:background="#0000000"
            android:hint="Follower's username"
            android:textColor="@color/theme_primary"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:textColorHint="@color/theme_primary"
            android:textSize="16sp"
            android:text="Name" />

        <ImageView
            android:id="@+id/profile_page_back_btn"
            android:scaleX="-1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_backbutton"
            app:tint="@color/theme_primary" />

    </LinearLayout>

    <ListView
        android:id="@+id/user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />


</LinearLayout>
